<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:tns="http://lucene.apache.org/solr/schema/solr/explorer-1.0"
           elementFormDefault="qualified"
           targetNamespace="http://lucene.apache.org/solr/schema/solr/explorer-1.0">

    <xs:element name="debug">
        <xs:annotation>
            <xs:documentation>
                Activates the debug plugin for this core
            </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:attribute name="query" use="optional" type="xs:boolean" default="true">
                <xs:annotation>
                    <xs:documentation>
                        Turns on/off the query debug information (true by default)
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>
    </xs:element>
    
</xs:schema>